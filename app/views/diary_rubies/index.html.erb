<p id="notice"><%= notice %></p>

<h1>日記一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>登録日時</th>
      <th>更新日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diary_rubies.each do |diary_ruby| %>
      <tr>
        <td><%= diary_ruby.id %></td>
        <td><%= link_to diary_ruby.title, diary_ruby %></td>
        <td><%= diary_ruby.created_at %></td> 
        <td><%= diary_ruby.updated_at %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

